@page
@using DailyReport.Models.WardsModels
@model DailyReport.Pages.Wards.WardsManagementModel
@{
    string msg;
    msg = Model.departmentNumber + " отделения";
    ViewData["Title"] = "Добавление палат " + msg;
}


<h4>Регистрация палат @msg</h4>

<div class="row">
    <div class="col-2">
        Номер палаты
    </div>
    <div class="col-2">
        Вместимость
    </div>
</div>
@{
    foreach(Ward ward in Model.Wards){
        <form method="post">
            <div class="row">
                <div class="col-2">
                    <input type="text" placeholder="Номер палаты" value="@ward.Number" asp-for="Ward.Number" />
                </div>
                <div class="col-2">
                    <input type="number" value="@ward.Capacity" asp-for="Ward.Capacity" />
                </div>
                <div class="col-1 d-none">
                    <input type="number" value="@ward.Department" asp-for="Ward.Department" />
                    <input type="number" value="@ward.Id" asp-for="Ward.Id" />
                </div>
                <div class="col-1">
                    <input type="submit" value="&#128465" asp-page-handler="DeleteWard" asp-route-id="@ward" asp-route-depNumber="@Model.departmentNumber" />
                    <input type="submit"  value="&#9998" asp-page-handler="UpdateWard" />
                   
                </div>
            </div>
        </form>
    }

}

<h6>Добавить палату</h6>
<form method="post">
    <div class="row">
        <div class="col-2">
            Номер палаты
        </div>
        <div class="col-2">
            Вместимость
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <input type="text" placeholder="Номер палаты" asp-for="Ward.Number"/>
        </div>
        <div class="col-2">
            <input type="number" asp-for="Ward.Capacity"/>
        </div>
        <div class="col-1 d-none">
            <input type="number" value="@Model.departmentNumber" asp-for="Ward.Department"/>
        </div>
        <div class="col-1">
            <input type="submit" value="+" asp-page-handler="AddWard" />
        </div>
    </div>
</form>
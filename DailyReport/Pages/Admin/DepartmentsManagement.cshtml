@page
@using DailyReport.Models
@model DailyReport.Pages.Admin.DepartmentsManagementModel
@{
    ViewData["Title"] = "Список отделений";
}

<div class="container">
    @{
        foreach (Department deps in Model.Departments)
        {
            <form method="post">
                <div class="row pt-2">
                    <div class="col-2">
                        <select class="form-select" asp-for="department.Number">
                            <option selected value="@deps.Number"></option>
                            <option value="1">Первое</option>
                            <option value="11">Первое грязная зона</option>
                            <option value="3">Третье</option>
                            <option value="4">Четвертое</option>
                            <option value="5">Пятое</option>
                            <option value="6">Шестое</option>
                            <option value="7">Седьмое</option>
                            <option value="8">Дневной стационар</option>
                            <option value="90">ОРИТ</option>
                            <option value="91">ОРИТ грязная зона</option>
                        </select>
                    </div>
                    <div class="col-2">
                        <input type="text" value="@deps.WardQuantity" class="form-control" asp-for="department.WardQuantity" />
                    </div>
                    <div class="col-3">
                        <input type="text" value="@deps.AdultSpotsQuantity" class="form-control" asp-for="department.AdultSpotsQuantity" />
                    </div>
                    <div class="col-2">
                        <input type="text" value="@deps.ChildrenSpotsQuantity" class="form-control" asp-for="department.ChildrenSpotsQuantity" />
                    </div>
                    <div class="col-2 d-none">
                        <input type="text" value="@deps.Id" class="form-control" asp-for="@deps.Id" />
                    </div>
                    <div class="col-1 d-print-none">
                        <input type="submit" value="&#128465" asp-page-handler="DeleteDepartment" asp-route-id="@deps.Id" />
                        <input type="submit" value="&#9998" asp-page-handler="UpdateDepartment" />
                    </div>
                </div>
            </form>
        }
    }

    <form method="post">
        <div class="row">
            <div class="col-2">
                <select class="form-select" asp-for="department.Number">
                    <option selected disabled>Отделение</option>
                    <option value="1">Первое</option>
                    <option value="11">Первое грязная зона</option>
                    <option value="3">Третье</option>
                    <option value="4">Четвертое</option>
                    <option value="5">Пятое</option>
                    <option value="6">Шестое</option>
                    <option value="7">Седьмое</option>
                    <option value="8">Дневной стационар</option>
                    <option value="90">ОРИТ</option>
                    <option value="91">ОРИТ грязная зона</option>
                </select>                
            </div>
            <div class="col-3">
                <input type="number" placeholder="Количество палат" class="form-control" asp-for="department.WardQuantity" />
            </div>
            <div class="col-2">
                <input type="text" placeholder="Взрослые" class="form-control" asp-for="department.AdultSpotsQuantity" />
            </div>
            <div class="col-2">
                <input type="text" placeholder="Детские" class="form-control" asp-for="department.ChildrenSpotsQuantity" />
            </div>
            <div class="col-2">

            </div>
            <div class="col-1">
                <input type="submit" value="+" asp-page-handler="Save" />
            </div>
        </div>
    </form>

</div>